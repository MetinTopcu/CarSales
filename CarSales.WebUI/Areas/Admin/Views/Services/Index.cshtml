@model IEnumerable<CarSales.Entities.CarService>

@{
    ViewData["Title"] = "Service";
}

<h1>Service</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceArrivalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarProblem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceCharge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceExitDate)
