            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceArrivalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarProblem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceCharge)
